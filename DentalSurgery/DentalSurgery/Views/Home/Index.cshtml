
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        @{
            ViewBag.Title = "Home Page";
        }
        <br />
        <div class="header">
            <img src="~/Images/Tooth-blue-icon.png" alt="logo" />
            <h1>Gabinet dentystyczny</h1>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="~/Images/card-images/visit.jpg" />
                        <div class="card-body">
                            <h5 class="card-title">Zapisz się na wizytę</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="~/Images/card-images/about.jpg" />
                        <div class="card-body">
                            <h5 class="card-title"> @Html.ActionLink("O nas", "About", "Home")</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="~/Images/card-images/contact.jpg" />
                        <div class="card-body">
                            <h5 class="card-title">@Html.ActionLink("Kontakt", "Contact", "Home")</h5>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <img class="card-img-top" src="~/Images/card-images/schedule.jpg" />
                        <div class="card-body">
                            <h5 class="card-title">@Html.ActionLink("Kontakt", "Contact", "Home")</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <div class="container body-content">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
</body>
</html>
